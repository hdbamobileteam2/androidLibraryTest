<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppTheme.TestView" parent="">
        <item name="imageTintColor">@color/teal_200</item>
        <item name="textAppearance">@style/TextAppearance.AppTheme.Body</item>
    </style>
    <style name="Widget.AppTheme.TestView.Warning" parent="">
        <item name="imageTintColor">@color/red</item>
        <item name="textAppearance">@style/TextAppearance.AppTheme.Body.Warning</item>
    </style>
    <style name="Widget.AppTheme.CustomRecyclerWithPager" parent="">
        <item name="crvpTextAppearance">@style/TextAppearance.AppTheme.Body</item>
        <item name="crvpTitleAppearance">@style/TextAppearance.AppTheme.Title</item>
    </style>
    <style name="Widget.AppTheme.CustomRecyclerWithPager.Warning" parent="">
        <item name="crvpTextAppearance">@style/TextAppearance.AppTheme.Body.Warning</item>
        <item name="crvpTitleAppearance">@style/TextAppearance.AppTheme.Title.Warning</item>
    </style>
    <style name="Widget.AppTheme.CustomButton" parent="">
        <item name="customButtonBackgroundColor">@color/teal_200</item>
        <item name="customButtonTextAppearance">@style/TextAppearance.AppTheme.ButtonText</item>
    </style>
    <style name="Widget.AppTheme.CustomButton.Warning" parent="">
        <item name="customButtonBackgroundColor">@color/red</item>
        <item name="customButtonTextAppearance">@style/TextAppearance.AppTheme.ButtonText.Warning</item>
    </style>
    <style name="TextAppearance.AppTheme.Body" parent="android:TextAppearance">
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.AppTheme.Body.Warning" parent="android:TextAppearance">
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextAppearance.AppTheme.Title" parent="android:TextAppearance">
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.AppTheme.Title.Warning" parent="android:TextAppearance">
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="TextAppearance.AppTheme.ButtonText" parent="android:TextAppearance">
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.AppTheme.ButtonText.Warning" parent="android:TextAppearance">
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="testViewStyle">@style/Widget.AppTheme.TestView</item>
        <item name="customRecyclerWithPagerStyle">@style/Widget.AppTheme.CustomRecyclerWithPager</item>
        <item name="customButtonStyle">@style/Widget.AppTheme.CustomRecyclerWithPager</item>
    </style>
</resources>